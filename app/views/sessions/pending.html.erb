<% provide(:title, 'Users awaiting approval') %>
<h1>Users awaiting approval</h1>

<ul class="admin" id="users">
  <% if @users.empty? %>
  <li><i>None</i></li>
  <% else %>
    <% @users.each do |user| %>
      <li>
        <%= user.name %>
        | <%= link_to 'Approve account', approve_account_user_path(user), method: :post %>
      </li>
    <% end %>
  <% end %>
</ul>