<% provide(:title, "Reset Password") %>
<h1>Reset Password</h1>

<div class="row">
  <div class="span6 offset2">
    <%= form_for(:password_resets, url: password_resets_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.submit "Reset Password", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>