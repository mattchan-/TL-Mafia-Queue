<% provide(:title, 'Add topic') %>
<h1>Add Topic</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@topic) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= fields_for(@post) do |post| %>
        <%= post.label :content %>
        <%= post.text_area :content %>
      <% end %>

      <%= f.submit "Create Topic", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>