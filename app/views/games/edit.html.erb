<% provide(:title, 'Edit game') %>
<h1>Edit Game</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@game) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title, placeholder: @game.title %>

      <%= f.label :description %>
      <%= f.text_area :description, placeholder: @game.description %>

      <%= f.label :maximum_players %>
      <%= f.text_field :maximum_players, placeholder: @game.maximum_players %>

      <%= select :game, :category_id, Category.all.collect { |c| [c.name, c.id] } %>

      <%= f.submit "Create Game", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>