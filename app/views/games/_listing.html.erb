<tr class=<%= game.running ? "running" : "pending" %>>
  <% if signed_in? %> <!-- if signed in... -->
    <% if game.host == current_user %> <!-- if user is game host, show run/pause -->
      <td class="white"><%= link_to game.running ? '/pause' : '/run', run_game_path(game.id), method: :post, class: "btn btn-small" %></td>
    <% else %> <!-- if user is not game host... -->
      <% if game.users.exists?(current_user) %> <!-- ...and user is signed up, show /out -->
        <td class="white"><%= link_to '/out', vote_path(game.votes.find_by_user_id(current_user).id), method: :delete, class: "btn btn-small" %></td>
      <% else %> <!-- ...and user is not signed up, show /in -->
        <td class="white"><%= link_to '/in', votes_path(game_id: game.id, user_id: current_user), method: :post, class: "btn btn-small" %></td>
      <% end %>
    <% end %>

  <% else %> <!-- if not signed in, no buttons -->
    <td class="white"></td>
  <% end %>

  </td><td class="categoryTag"><%= game.category.tag %></td>
  <td><%= link_to game.title, game_path(id: game.id) %></td>
  <td><%= game.host.name %></td>
  <td><%= game.signups.to_s + '/' + game.maximum_players.to_s %></td>
  <td><%= game.updated_at.strftime("%H:%M %b %d %Y") %></td>
</tr>