<% if signed_up_for? %>
  <%= link_to '/out', vote_path(id: @game.votes.find_by_user_id(current_user).id), method: :delete, class: "btn btn-small btn-primary" if @game.status_id == 1 %>
<% else %>
  <%= link_to '/in', votes_path(game_id: @game.id, user_id: current_user), method: :post, class: "btn btn-small btn-primary" if @game.status_id == 1 %>
<% end %>