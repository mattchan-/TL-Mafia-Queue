<% provide(:title, 'Reply!') %>
<h1>Reply!</h1>

<div class="post">
  <div class="replyBox">
    <%= form_for(@post, url: quote_game_path(id: @game.id)) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.text_area :content, value: '[quote][b]On ' + @quoted_post.created_at.strftime("%b %d %Y %H:%M") + ' ' + @quoted_post.user.name + ' wrote:[/b]' + @quoted_post.content + '[/quote]'  %>
      </div>
      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>