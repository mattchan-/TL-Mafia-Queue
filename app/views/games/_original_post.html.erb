<div class="post">
  <div class="post_owner">
    <h3><%= @game.host.name %> &nbsp; <%= @game.created_at.strftime("%H:%M %b %d %Y") %></h3>
  </div>
  <div class="gameDescription">
    <%= @game.description.bbcode_to_html.html_safe %>
    <hr>
    <p>Category: <%= @game.category %></p>
    <p>Status: <%= @game.players.count.to_s + '/' + @game.player_cap.to_s + ' ' + @game.status %></p>
    <div class="playerList">
      <h3>Player List:</h3>
      <br/>
      <% @game.players.each_with_index do |user, index| %>
        <%= index += 1 %>. <%= user.name %><br/>
      <% end %>
      <%= (@game.players.count + 1).to_s + '.' if @game.status == "Signups Open" %>
      <hr><%= @game.player_cap %> of <%= @game.player_cap %> players remaining.
    </div>
    <% if signed_in? && !host? %>
      <%= render 'signup_buttons' %>
    <% end %>
  </div>
</div>